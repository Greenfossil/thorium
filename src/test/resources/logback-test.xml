<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <Appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </Appender>

    <root level="info">
        <appender-ref ref="Console"/>
    </root>

</configuration>